datasource db {
  provider = "sqlite"
  url      = "file:../src/db/database.db"
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id             Int     @id @default(autoincrement())
  name           String
  connectedUsers Users[] @relation(name: "ConnectedUsers")
  Users          Users?  @relation("ConnectedUsers", fields: [usersId], references: [id])
  usersId        Int?
}
